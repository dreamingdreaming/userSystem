<!DOCTYPE html>
<html>
<head>
    <title></title>
    <meta charset="UTF-8">
    <link rel="stylesheet" type="text/css" href="../../Css/bootstrap.css" />
    <link rel="stylesheet" type="text/css" href="../../Css/bootstrap-responsive.css" />
    <link rel="stylesheet" type="text/css" href="../../Css/style.css" />
    <script type="text/javascript" src="../../Js/jquery.js"></script>
    <script type="text/javascript" src="../Js/jquery.sorted.js"></script>
    <script type="text/javascript" src="../../Js/bootstrap.js"></script>
    <script type="text/javascript" src="../../Js/ckform.js"></script>
    <script type="text/javascript" src="../../Js/common.js"></script>

 

    <style type="text/css">
        body {
            padding-bottom: 40px;
        }
        .sidebar-nav {
            padding: 9px 0;
        }

        @media (max-width: 980px) {
            /* Enable use of floated navbar text */
            .navbar-text.pull-right {
                float: none;
                padding-left: 5px;
                padding-right: 5px;
            }
        }


    </style>
    <script>
    $(function () {       
		$('#backid').click(function(){
				window.location.href="index.jsp";
		 });
    });
    
    /*重点， 在添加用户名的时候， 从数据库里拿数据来，与将要添加的用户名进行比较
    *
    * 如果用户名相同，不能提交，如果不相同， 说明该用户名可用，，，返回值可定为，1，2（方便进行判断）
    *
    *
    * 需要使用到 异步请求
    * Ajax
    *
    *
    * */

    function  loginname() {
        var username = document.getElementById("username").value;
        var namesp = document.getElementById("namesp");
        var isOK = true;
        if (username == '') {
            namesp.innerHTML = "<font color='red'>用户名不能为空</font>"
            isOK = false;
        }
        if (username.length > 10) {
            namesp.innerHTML = "<font color='red'>用户名长度不能超过10</font>"
            isOK = false;
        }
        var xhr = new XMLHttpRequest();

        if (username != '' && username.length > 0 && username.length <= 10) {
            //打开一个与服务器的连接
            xhr.open("get", "/page/doubleUserName?username=" + username + "");
            //当异步请求加载状态改变时  ， 触发 fun 这个函数
            xhr.onreadystatechange = function () {
                if (xhr.readyState == 4 && xhr.status == 200) {
                    var responseText = xhr.responseText;
                    namesp.innerHTML = "<font color='#d2691e'>"+responseText+"</font>";
                    if (responseText.contains("存在")) {
                        isOK=false;
                    }
                }
            }
            xhr.send();
        }
            if (isOK){
                namesp.innerHTML = "<font color='green'> √</font>"

            }
            return isOK;
        }


        function pwdcheck() {
            var password = document.getElementById("password").value;
            var pwdsp = document.getElementById("pwdsp");
            var isOK = true;
            if (password == '') {
                pwdsp.innerHTML = "<font color='red'>密码不能为空</font>"
                isOK = false;
            }
            if (password.length != 6) {
                pwdsp.innerHTML = "<font color='red'>密码长度必须为6位数</font>";
                isOK = false;
            }


            return isOK;
        }

        function realnamecheck() {
            var realname = document.getElementById("realname").value;
            var realsp = document.getElementById("realsp");
            var isOK = true;
            if (realname == '') {
                realsp.innerHTML = "<font color='red'>用户名不能为空</font>"
                isOK = false;
            }
            if (realname.length > 10) {
                realsp.innerHTML = "<font color='red'>用户名长度不能超过10</font>"
                isOK = false;
            }
            if (realname != '' && realname.length > 0 && realname.length <= 10) {
                realsp.innerHTML = "<font color='green'> √</font>"
            }
            return isOK;
        }

        function imagecheck() {
            var image = document.getElementById("image").value;
            var imagesp = document.getElementById("imagesp");
            var isOK = true;
            if (image == '') {
                imagesp.innerHTML = "<font color='red'>头像不能为空</font>"
                isOK = false;
            }
            else {
                imagesp.innerHTML = "<font color='green'> √</font>"
            }
            return isOK;
        }
        function checkall1() {
            var isOk = true;
            if (!loginname()) {
                isOk = false;
            }
            if (!pwdcheck()) {
                isOk = false;
            }
            if (!realnamecheck()) {
                isOk = false;
            }
            if (!imagecheck()) {
                isOk = false;
            }
            return isOk;
        }

</script>
</head>
<body>
<form action="/page/addUser" method="post" class="definewidth m20" enctype="multipart/form-data"
      onsubmit= "return  checkall1()" >
<input type="hidden" name="id" value="{$user.id}" />
    <input type="hidden" id="msgResult" name="message" value="<%=request.getAttribute("msg")%>" />
    <table class="table table-bordered table-hover definewidth m10">
        <tr>
            <td width="10%" class="tableleft"><font color="red">*</font>登录名</td>
            <td><input type="text" name="username" id="username" onblur="loginname()"/><span id="namesp"></span></td>
        </tr>
        <tr>
            <td class="tableleft"><font color="red" >*</font>密码</td>
            <td><input  type="password" id="password" onblur="pwdcheck()"  name="password" /><span id="pwdsp"></span></td>
        </tr>
        <tr>
            <td class="tableleft"><font color="red">*</font>真实姓名</td>
            <td><input type="text" name="realname" id="realname" onblur="realnamecheck()"/><span id="realsp"></span></td>
        </tr>
        <tr>
            <td class="tableleft"><font color="red">*</font>年龄</td>
            <td><input type="text" name="age" id="age" onblur=""/><span id="agesp"></span></td>
        </tr>
        <tr>
            <td class="tableleft"><font color="red">*</font>性别</td>
            <td><input type="text" name="sex" id="sex" onblur=""/><span id="sexsp"></span></td>
        </tr>
        <tr>
            <td class="tableleft">邮箱</td>
            <td><input type="text" name="email"/></td>
        </tr>
        <tr>
            <td class="tableleft">头像</td>
            <td><input type="file" name="image"  id="image" onblur="imagecheck()"/><span id="imagesp"></span></td>
        </tr>
        <tr>
            <td class="tableleft"><font color="red">*</font>状态</td>
            <td>
                <input type="radio" name="status" value="0" checked/> 启用
              <input type="radio" name="status" value="1" /> 禁用
            </td>
        </tr>
        <tr>
            <td class="tableleft"><font color="red">*</font>角色</td>
            <td>
            	<select name="role">
        			<option value="">--请选择--
                    <c:forEach var="role" items="${roleList}">
                        <option value="${role.rName}">${role.rName}
                    </c:forEach>
       			 </select>
        	</td>
        </tr>
        <tr>
            <td class="tableleft"></td>
            <td>
                <button type="submit" class="btn btn-primary" type="button">更新</button>&nbsp;&nbsp;<button type="button" class="btn btn-success" name="backid" id="backid">返回列表</button>
            </td>
        </tr>
    </table>
</form>
</body>
